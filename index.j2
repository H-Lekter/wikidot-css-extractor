{% extends 'base.j2' %}

{% from 'utils.j2' import plural, plural_count %}

{% block title %}SCP Wiki Extracted Styles{% endblock %}

{% block body %}
  <h1 class="title">Extracted Styles</h1>

  <details>
    <summary>Pages</summary>

    <ul class="page-list">
      {% for page in pages %}
        <li>
          <a href="/wikidot-css-scraper/{{ page.slug }}.html">{{ page.title }}</a> &ndash;
          {{ plural_count(page.styles, 'style') }},
          {{ plural_count(page.source, 'character') }} of page source
        </li>
      {% endfor %}
    </ul>
  </details>

  <details>
    <summary>Styles</summary>

    <p>
      This is a deduplicated list of stylings found across all scraped pages,
      along with the number of occurrences for each.
    </p>

    <ul class="style-list">
      {% for style, count in styles %}
        <li>
          {{ plural(count, 'style') }}
          <pre><code>{{ style }}</code></pre>
        </li>
      {% endfor %}
    </ul>
  </details>

  <details>
    <summary>Raw Data</summary>

    <p>
      Warning! The file is very large (&gt; 70 MB).
    </p>

    <p>
      The raw JSON file containing all the data this report was built from is available here:
      <a href="/wikidot-css-scraper/extracted-styles.json"><code>extracted-styles.json</code></a>
    </p>
  </details>
{% endblock %}
