{% macro plural_count(collection, word) %}
  {{- plural(collection|length, word) -}}
{% endmacro %}

{% macro plural(count, word) %}
  {# For printing strings like "12 apples", where the 's' depends on the count's value #}
  {{- count|commaify }} {{ word -}}
  {%- if count != 1 -%}
    s
  {%- endif -%}
{% endmacro %}
