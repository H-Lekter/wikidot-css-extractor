{% extends 'base.j2' %}

{% from 'utils.j2' import anchor, plural %}

{% block title %}SCP Wiki Inclusions{% endblock %}

{# Helper macros #}

{% macro build_list_item(operator, value) %}
  {% for include, count in includes %}
    {% if cmp(count, operator, value) %}
      <li>
        {{ plural(count, 'inclusion') }}
        {{- anchor('include', include|urlencode) }}

        <pre class="code"><code>{{ style }}</code></pre>
      </li>
    {% endif %}
  {% endfor %}
{% endmacro %}

{% macro build_list(value) %}
  {{ build_list_item('>=', value) }}

  <li class="no-bullet">
    <details>
      <summary>Uncommon (less than {{ value }})</summary>

      {{ build_list_item('<', value) }}
    </details>
  </li>
{% endmacro %}

{# Actual body #}

{% block body %}
  <h1 class="title">Included Pages</h1>

  <p>
    A deduplicated list of included pages found across all pages.
  </p>

  <ul class="includes-count">
    {{ build_list(11) }}
  </ul>
{% endblock %}
