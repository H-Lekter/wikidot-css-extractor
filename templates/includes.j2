{% extends 'base.j2' %}

{% from 'utils.j2' import anchor, plural %}

{% block title %}SCP Wiki Inclusions{% endblock %}

{# Helper macros #}

{% macro build_list_item(operator, value) %}
  {% for class, count in classes %}
    {% if cmp(count, operator, value) %}
      <li>
        {{ plural(count, 'inclusion') }}
        {{- anchor('include', style|sha1) }}

        <pre><code>{{ style }}</code></pre>
      </li>
    {% endif %}
  {% endfor %}
{% endmacro %}

{% macro build_list_collapsible(value) %}
  <li class="no-bullet">
    <details>
      <summary>Only {{ plural(value, 'inclusion') }}</summary>

      {{ build_list_item('==', value) }}
    </details>
  </li>
{% endmacro %}

{% macro build_list(value) %}
  {{ build_list_item('>', value) }}

  {% for n in reversed(range(1, value + 1)) %}
    {{ build_list_collapsible(n) }}
  {% endfor %}
{% endmacro %}

{# Actual body #}

{% block body %}
  <h1 class="title">Included Pages</h1>

  <p>
    A deduplicated list of included pages found across all pages.
  </p>

  <ul class="includes-count">
    {{ build_list(5) }}
  </ul>
{% endblock %}
