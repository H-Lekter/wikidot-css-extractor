{% extends 'base.j2' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
  <div class="page">
    <h1 class="page-name">
      <a name="{{ slug }}">{{ title }}</a>
    </h1>

    <details>
      <summary>List of styles</summary>

      <ul class="page-styles">
        {% for style in styles %}
          <li>
            <code>{{ style }}</code>
          </li>
        {% endfor %}
      </ul>
    </details>

    <details>
      <summary>Page source</summary>

      <pre><textarea class="page-source" readonly>{{ source }}</textarea></pre>
    </details>
  </div>
{% endblock %}
